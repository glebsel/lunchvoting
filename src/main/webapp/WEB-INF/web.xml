<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>DLVS</display-name>

    <servlet>
        <servlet-name>votingServlet</servlet-name>
        <servlet-class>DLVS.web.VotingServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>votingServlet</servlet-name>
        <url-pattern>/voting</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addingServlet</servlet-name>
        <servlet-class>DLVS.web.AddingServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>addingServlet</servlet-name>
        <url-pattern>/adding</url-pattern>
    </servlet-mapping>

</web-app>
